{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "d:\\fichiers de claude\\workspace\\prompt-flow-poc"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "d:\\fichiers de claude\\workspace\\prompt-flow-poc"]
    },
    "azure": {
      "command": "npx",
      "args": ["-y", "@azure/mcp"],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}",
        "AZURE_CLIENT_ID": "${AZURE_CLIENT_ID}",
        "AZURE_CLIENT_SECRET": "${AZURE_CLIENT_SECRET}"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "d:\\fichiers de claude\\workspace\\prompt-flow-poc\\data"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "MCP Server for Azure AI Foundry": {
        "command": "uvx",
        "args": [
            "--prerelease=allow",
            "--no-cache",
            "--from",
            "git+https://github.com/azure-ai-foundry/mcp-foundry.git",
            "run-azure-ai-foundry-mcp",
            "--envFile",
            "${workspaceFolder}/.env"
        ]
    }
  }
}